[colors.bright]
black = "{{ .colors.bright.black }}"
blue = "{{ .colors.bright.blue }}"
cyan = "{{ .colors.bright.cyan }}"
green = "{{ .colors.bright.green }}"
magenta = "{{ .colors.bright.magenta }}"
red = "{{ .colors.bright.red }}"
white = "{{ .colors.bright.white }}"
yellow = "{{ .colors.bright.yellow }}"

[colors.normal]
black = "{{ .colors.normal.black }}"
blue = "{{ .colors.normal.blue }}"
cyan = "{{ .colors.normal.cyan }}"
green = "{{ .colors.normal.green }}"
magenta = "{{ .colors.normal.magenta }}"
red = "{{ .colors.normal.red }}"
white = "{{ .colors.normal.white }}"
yellow = "{{ .colors.normal.yellow }}"

[colors.primary]
background = "{{ .colors.primary.background }}"
bright_foreground = "{{ .colors.primary.foreground }}"
dim_foreground = "{{ .colors.normal.white }}"
foreground = "{{ .colors.primary.foreground }}"

[colors.cursor]
cursor = "{{ .colors.primary.accent }}"
text = "{{ .colors.primary.background }}"

[cursor]
style = "Block"

[env]
TERM = "xterm-256color"

[font]
size = 12

[font.bold]
family = "IosevkaNerdFont"
style = "Bold"

[font.bold_italic]
family = "IosevkaNerdFont"
style = "Bold Italic"

[font.italic]
family = "IosevkaNerdFont"
style = "Italic"

[font.normal]
family = "IosevkaNerdFont"

[[keyboard.bindings]]
action = "IncreaseFontSize"
key = "Plus"
mods = "Control|Shift"

[[keyboard.bindings]]
action = "DecreaseFontSize"
key = "Minus"
mods = "Control|Shift"

[[keyboard.bindings]]
action = "ResetFontSize"
key = "Key0"
mods = "Control|Shift"

[window]
decorations = "none"
decorations_theme_variant = "Dark"
dynamic_padding = true
opacity = 1

[window.dimensions]
columns = 120
lines = 30

[window.padding]
x = 10
