{
  "layer": "top",
  "position": "right",
  "spacing": 0,
  "height": 0,

  "margin-top": 0,
  "margin-right": 0,
  "margin-bottom": 0,
  "margin-left": 0,

  "modules-left": ["hyprland/workspaces"],

  "modules-center": [],

  "modules-right": [
    "tray",
    "cpu",
    "memory",
    "battery",
    "network",
    "pulseaudio",
    "clock",
  ],

  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "tooltip": false,
  },

  "tray": {
    "spacing": 10,
    "tooltip": false,
  },

  "clock": {
    "format": "{:%H\n%M}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "today": "<span color='{{ .colors.bright.green }}'><b><u>{}</u></b></span>",
      },
    },
  },

  "cpu": {
    "format": "cpu\n{usage}%",
    "interval": 2,
    "states": {
      "critical": 90,
    },
  },

  "memory": {
    "format": "mem\n{percentage}%",
    "interval": 2,
    "states": {
      "critical": 80,
    },
  },

  "battery": {
    "format": "bat\n{capacity}%",
    "interval": 5,
    "states": {
      "warning": 20,
      "critical": 10,
    },
    "tooltip": false,
  },

  "network": {
    "format-wifi": "wifi\nup",
    "format-ethernet": "eth\nup",
    "format-disconnected": "eth\ndown",
    "tooltip": false,
  },

  "pulseaudio": {
    "scroll-step": 5,
    "max-volume": 150,
    "format": "vol\n{volume}%",
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-click-right": "pavucontrol-qt",
  },
}
