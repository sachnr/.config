* {
  border: none;
  font-family: "{{ .font.monospace }}";
  font-weight: bold;
  font-size: 14px;
}

window#waybar {
  background-color: alpha({{ .colors.primary.background }}, 1.0);
  color: {{ .colors.primary.foreground }};
}

#workspaces {
  background-color: {{ .colors.primary.background }};
  margin: 0px 6px;
}

#workspaces button {
  all: initial;
  padding: 0 0.4em;
  background-color: {{ .colors.primary.background }};
  color: {{ .colors.primary.foreground }};
}

#workspaces button.active {
  color: {{ .colors.primary.background }};
  background-color: {{ .colors.primary.accent }};
}

#workspaces button.focused {
  color: {{ .colors.primary.accent }};
}

#workspaces button.urgent {
  color: {{ .colors.bright.red }};
}

#workspaces button.persistent {
  color: {{ .colors.bright.black }};
}

#battery,
#pulseaudio,
#network,
#clock,
#date,
#mpd,
#tray,
#cpu,
#memory,
#mpd,
#custom-playerctl {
  background-color: {{ .colors.primary.background }};
  padding: 0 0.8em;
}

tooltip {
  padding: 10px;
  margin: 30px;
}

tooltip label {
  font-weight: bold;
  padding: 20px;
}
