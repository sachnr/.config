* {
  border: none;
  font-family: "{{ .font.family }}";
  font-weight: bold;
  font-size: 14px;
}

window#waybar {
  background-color: alpha({{ .colors.primary.background }}, 0.8);
  color: {{ .colors.primary.foreground }};
}

#workspaces {
  background-color: {{ .colors.primary.background }};
  margin: 4px 6px;
  border-radius: 4px;
  border-radius: 4px;
  border: 1px solid {{ .colors.primary.selection }};
}

#workspaces button {
  all: initial;
  padding: 0 0.4em;
  border-radius: 4px;
  background-color: {{ .colors.primary.background }};
  color: {{ .colors.primary.foreground }};
}

#workspaces button.active {
  color: {{ .colors.primary.background }};
  background-color: {{ .colors.primary.accent }};
}

#workspaces button.focused {
  color: {{ .colors.primary.accent }};
}

#workspaces button.urgent {
  color: {{ .colors.bright.red }};
}

#workspaces button.persistent {
  color: {{ .colors.bright.black }};
}

#battery,
#pulseaudio,
#network,
#clock,
#date,
#mpd,
#tray,
#cpu,
#memory,
#custom-playerctl {
  padding: 0 0.4em;
  margin: 4px;
  background-color: {{ .colors.primary.background }};
  color: {{ .colors.primary.foreground }};
  border-radius: 4px;
  border: 1px solid {{ .colors.primary.selection }};
}

#mpd {
  padding: 0 2em;
  margin: 4px 6px;
}

tooltip {
  border-radius: 8px;
  padding: 10px;
  margin: 30px;
}

tooltip label {
  font-weight: bold;
  padding: 20px;
}
