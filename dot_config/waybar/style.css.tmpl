* {
    border: none;
    border-radius: 0;
    min-height: 0;
    font-family: "{{ .font.monospace }}";
    font-weight: bold;
    font-size: 16px;
    padding: 0;
}

window#waybar {
    background: {{ .colors.primary.background }};
    border-bottom: 2px solid {{ .colors.primary.selection }};
    color: {{ .colors.primary.foreground }};
}

tooltip {
    background-color: {{ .colors.primary.background2 }};
    border: 2px solid {{ .colors.primary.selection }};
}

#clock,
#tray,
#cpu,
#memory,
#battery,
#network,
#pulseaudio {
    margin: 6px 6px 6px 0px;
    padding: 2px 8px;
}

#workspaces {
    background-color: {{ .colors.primary.background3 }};
    margin: 6px 0px 6px 6px;
    border: 2px solid {{ .colors.primary.selection }};
}

#workspaces button {
    all: initial; /* Reset all styles */
    font-family: "{{ .font.monospace }}";
    font-weight: bold;
    min-width: 0;
    box-shadow: inset 0 -3px transparent;
    padding: 2px 6px;
    color: {{ .colors.normal.white }}; 
}

#workspaces button.focused {
    color: {{ .colors.primary.accent }};
}

#workspaces button.active {
  color: {{ .colors.primary.accent }};
}

#workspaces button.urgent {
    background-color: {{ .colors.normal.red }};
    color: {{ .colors.primary.background }}; /* Use background color for high contrast */
}

#clock {
    background-color: {{ .colors.primary.background3 }};
    border: 2px solid {{ .colors.primary.selection }};
    color: {{ .colors.primary.foreground }};
}

/* Default state for modules */
#tray,
#cpu,
#memory,
#network,
#pulseaudio {
    background-color: {{ .colors.primary.background3 }};
    border: 2px solid {{ .colors.primary.selection }};
    color: {{ .colors.primary.foreground }};
}

#battery {
    background-color: {{ .colors.normal.green }};
    border: 2px solid {{ .colors.primary.selection }};
    color: {{ .colors.primary.background3 }};
}

#cpu.critical,
#memory.critical {
    background-color: {{ .colors.normal.red }};
    color: {{ .colors.primary.background }};
}

#battery.warning {
    background-color: {{ .colors.normal.yellow }};
    color: {{ .colors.primary.background3 }};
}

#battery.critical {
    background-color: {{ .colors.normal.red }};
    color: {{ .colors.primary.background3 }};
}
