* {
  font-size: 14px;
  font-family: "{{ .font.monospace }}";
  min-width: 6px;
  min-height: 0px;
  border: none;
  border-radius: 0;
  box-shadow: none;
  text-shadow: none;
  padding: 0px;
}

window#waybar {
  transition-property: background-color;
  transition-duration: 0.5s;
  border-radius: 6px;
  border: 1px solid {{ .colors.primary.background2 }}; background-color: {{ .colors.primary.background }};
  color: {{ .colors.primary.foreground }};
}

tooltip {
  border-radius: 6px;
  padding: 3px;
  border: 1px solid {{ .colors.primary.accent }};
  background-color: {{ .colors.primary.background }};
  color: {{ .colors.primary.foreground }};
}

tooltip label {
  font-size: 12px;
  color: {{ .colors.primary.foreground }};
}

.modules-right {
  margin: 4px;
  border-radius: 3px;
  background-color: {{ .colors.primary.background }};
  color: {{ .colors.primary.foreground }};
}

.modules-left {
  transition-property: background-color;
  transition-duration: 0.5s;
  margin: 4px;
  border-radius: 3px;
  background-color: {{ .colors.primary.background }};
  color: {{ .colors.primary.foreground }};
}

#workspaces {
  margin: 3px 1px 8px 1px;
  padding: 2px 0px;
  border-radius: 6px;
}

#workspaces button {
  transition-property: background-color;
  transition-duration: 0.5s;
  padding: 3px 2px;
  background-color: transparent;
  border-radius: 3px;
  color: {{ .colors.normal.white }};
}

#workspaces button.urgent {
  padding: 3px 2px;
  font-weight: bold;
  background-color: {{ .colors.bright.red }};
  color: {{ .colors.primary.foreground }};
}

#workspaces button.active {
  padding: 3px 2px;
  background-color: alpha({{ .colors.primary.accent }}, 1.0);
  color: {{ .colors.primary.background }};
  border-radius: 3px;
}

#cpu,
#memory,
#network,
#pulseaudio,
#battery,
#tray {
  border-radius: 4px;
  padding: 4px 3px;
  margin: 3px 1px;
  background-color: {{ .colors.primary.background2 }};
  border: 1px solid {{ .colors.primary.selection }};
  color: {{ .colors.primary.foreground }};
  font-weight: bold;
}

#clock {
  border-radius: 3px;
  padding: 4px 3px;
  margin: 3px 1px;
  font-weight: bold;
  background-color: alpha({{ .colors.primary.accent }}, 1.0);
  color: {{ .colors.primary.background }};
}

/* Network and PulseAudio with adjusted font for thinner bar */
#network,
#pulseaudio {
  font-size: 16px;
}

/* State-specific styling */
#cpu.critical,
#memory.critical {
  background-color: {{ .colors.bright.red }};
  color: {{ .colors.primary.background }};
  border: 1px solid {{ .colors.normal.red }};
}

#battery.warning {
  background-color: {{ .colors.normal.yellow }};
  border: 1px solid {{ .colors.bright.yellow }};
  color: {{ .colors.primary.background }};
}

#battery.critical {
  background-color: {{ .colors.bright.red }};
  border: 1px solid {{ .colors.normal.red }};
  color: {{ .colors.primary.background }};
}

#network.disconnected {
  background-color: {{ .colors.bright.red }};
  border: 1px solid {{ .colors.normal.red }};
  color: {{ .colors.primary.background }};
}

#pulseaudio.muted {
  background-color: {{ .colors.normal.black }};
  border: 1px solid {{ .colors.bright.black }};
  color: {{ .colors.normal.white }};
}
