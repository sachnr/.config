headerbar {
  min-height: 12px;
  padding: 2px;
  margin: 0;
}

tabbar tabbox {
  margin: 0;
  padding: 0;
  min-height: 10px;
  font-family: monospace;
}

tabbar tabbox tab {
  margin: 0;
  padding: 0;
  border-right: 1px solid {{ .colors.bright.black }};
}

tabbar tabbox tab:selected {
  color: {{ .colors.ui.foreground }};
}

tabbar tabbox tab label {
  font-size: 12px;
}
