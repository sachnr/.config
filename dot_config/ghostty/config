## Theme
font-family = "Iosevka Term"
font-style = "Iosevka Term Medium"
font-style-bold = "Iosevka Term Bold"
font-style-italic = "Iosevka Term Medium Italic"
font-style-bold-italic = "Iosevka Term Bold Italic"
font-size = 13.5
theme = "mellow"
window-padding-x = 4
window-padding-y = 4
window-decoration = "false"
adjust-cell-height = 15%
gtk-custom-css = tab-style.css

## Options
shell-integration-features = "no-cursor"
cursor-style-blink = "false"
cursor-style = "block"
cursor-invert-fg-bg = "true"
mouse-hide-while-typing = "true"

## Clipboard
clipboard-read = "allow"
clipboard-paste-protection = "false"

# keybinds
keybind = ctrl+a>j=goto_split:bottom
keybind = ctrl+a>k=goto_split:top
keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>l=goto_split:right
keybind = ctrl+a>v=new_split:right
keybind = ctrl+a>s=new_split:down
